<nav>
    <a href="/">Home</a>
    <a href="/auth/logout">Logout</a> <!-- Logout link -->
</nav>
<h1>Admin Dashboard</h1>
<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Company</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        <% jobs.forEach(job => { %>
        <tr>
            <td><%= job.title %></td>
            <td><%= job.company %></td>
            <td><%= job.status %></td>
            <td>
                <% if (job.status === 'Pending') { %>
                <form action="/admin/<%= job.id %>/approve" method="POST">
                    <button type="submit">Approve</button>
                </form>
                <% } %>
                <form action="/admin/<%= job.id %>?_method=DELETE" method="POST">
                    <button type="submit">Delete</button>
                </form>
            </td>
        </tr>
        <% }) %>
    </tbody>
</table>
