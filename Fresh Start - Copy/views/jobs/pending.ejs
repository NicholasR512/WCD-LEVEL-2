<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pending Jobs</title>
</head>
<%- include('../partials/header.ejs') %>
<%- include('../partials/errorMessage.ejs') %>
<body>
    <h1>Pending Jobs</h1>
    <% if (jobs.length === 0) { %>
        <p>No pending jobs at the moment.</p>
    <% } else { %>
        <% jobs.forEach(job => { %>
            <div>
                <h3><%= job.title %></h3>
                <p><%= job.description %></p>
                <form action="/jobs/<%= job.id %>/approve" method="POST" style="display: inline;">
                    <button type="submit">Approve</button>
                </form>
                <form action="/jobs/<%= job.id %>/reject" method="POST" style="display: inline;">
                    <button type="submit">Reject</button>
                </form>
            </div>
            <hr>
        <% }) %>
    <% } %>
</body>
</html>
